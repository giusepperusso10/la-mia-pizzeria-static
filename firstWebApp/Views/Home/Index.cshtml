@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">

    <title>Peppe Pizzeria</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="https://images.vexels.com/media/users/3/230453/isolated/lists/0c2e041b27c3505320041a0f51ed2370-slice-of-pizza-flat.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
                    Da Peppe Pizzeria
                </a>
            </div>
        </nav>
    </header>
    <main>
        <!-- Prima riga -->
        <h1 class="text-center m-4">Le nostre pizze !</h1>
       
        <div class="container">
            <div class="ro">
                <div class="col-2 no-float" style="vertical-align: top;">
                    <span class="text-danger"><strong>Menù</strong></span><br />
                    <span><strong>Pizze</strong></span><br />
                    <span><strong>Antipasti</strong></span><br />
                    <span><strong>Bevande</strong></span><br />
                </div>
                <div class="col no-float">
                    <div class="row mb-3">
                        <div class="col">
                            <div class="card" style="width: 15rem;">
                                <img src="/img/marinara.png" class="card-img-top" alt="pizzamarinara">
                                <div class="card-body">
                                    <p class="card-text">
                                        <span><strong>Marinara</strong></span><br />Pomodoro pelato italiano, Aglio di Nubia, Origano di Pantelleria, Olio evo e basilico <br /><span><strong>Prezzo: 7€</strong></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card" style="width: 15rem;">
                                <img src="/img/salsicciaefriarelli.png" class="card-img-top" alt="pizzaSalefriarelli">
                                <div class="card-body">
                                    <p class="card-text">
                                        <span><strong>Salsiccia e friarelli</strong></span><br />Provola di Agerola Affumicata in paglia, Friarielli Salsiccia a punta di coltello<br /><span><strong>Prezzo: 14€</strong></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card" style="width: 15rem;">
                                <img src="/img/prosciutto.png" class="card-img-top" alt="pizzaprosciuttofunghi">
                                <div class="card-body">
                                    <p class="card-text">
                                        <span><strong>Prosciutto e funghi</strong></span><br />Fiordilatte del Matese, funghi champignon, Prosciutto cotto Bonfatti Olio evo e basilico <br /><span><strong>Prezzo: 12€</strong></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card" style="width: 15rem;">
                                <img src="/img/acciughe.png" class="card-img-top" alt="pizzaacciughe">
                                <div class="card-body">
                                    <p class="card-text">
                                        <span><strong>Acciughina</strong></span><br />Pomodoro pelato italiano, Fiordilatte del Matese, Acciughe del cantabrico, capperi di Salina <br /><span><strong>Prezzo: 15€</strong></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Seconda riga -->

                    <div class="row mb-3">
                        <div class="col">
                            <div class="card" style="width: 15rem;">
                                <img src="/img/4formaggi.png" class="card-img-top" alt="pizza4formaggi">
                                <div class="card-body">
                                    <p class="card-text">
                                        <span><strong>4 Formaggi</strong></span><br />Fiordilatte del Matese, Fontina valdostana, Emmentaler, Gorgonzola, Parmigiano Reggiano<br /><span><strong>Prezzo: 11€</strong></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card" style="width: 15rem;">
                                <img src="/img/calzone.png" class="card-img-top" alt="calzone">
                                <div class="card-body">
                                    <p class="card-text">
                                        <span><strong>Calzone 2.0</strong></span><br />Pomodoro pelato italiano, Fiordilatte del Matese, Salame di Mugnano del Cardinale, Ricotta di bufala<br /><span><strong>Prezzo: 15€</strong></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card" style="width: 15rem;">
                                <img src="/img/diavola.png" class="card-img-top" alt="pizzadiavola">
                                <div class="card-body">
                                    <p class="card-text">
                                        <span><strong>Inferno</strong></span><br />Pomodoro pelato italiano, Spianata calabrese, Provola di Agerola, Parmigiano Reggiano<br /><span><strong>Prezzo: 13€</strong></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card" style="width: 15rem;">
                                <img src="/img/regina.png" class="card-img-top" alt="pizzaregina">
                                <div class="card-body">
                                    <p class="card-text">
                                        <span><strong>Regina</strong></span><br />Pomodorini datterini, Mozzarella di bufala, Parmigiano Reggiano, Olio evo e basilico<br /><span><strong>Prezzo: 14€</strong></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</main>
    <footer class="py-5 bg-dark">
        <div class="container px-5"><p class="m-0 text-center text-white">&copy; 2022 Peppe Pizzeria</p></div>
    </footer>

    
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>


